{
  "name": "repo-list-generator",
  "version": "0.4.1",
  "description": "Generate repo list for user or organization.",
  "main": "dist/index.js",
  "scripts": {
    "lint-check": "prettier --check **/*.{js,yml,json,md} && eslint .",
    "format": "prettier --write **/*.{js,yml,json,md} && eslint .",
    "clean": "rimraf -rf dist/* .repo_list/",
    "prebuild": "npm run clean",
    "build": "ncc build src/index.js --source-map --license license.txt",
    "test": "npm run build && node --require dotenv/config dist/index.js"
  },
  "husky": {
    "hooks": {
      "pre-commit": "echo 'pre-commit...' && lint-staged && npm run build && npm run lint-check && git add dist/"
    }
  },
  "lint-staged": {
    "**/*.{js}": [
      "prettier --write",
      "git add",
      "eslint"
    ],
    "**/*.{md,json,yml}": [
      "prettier --write",
      "git add"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yi-Xu-0100/repo-list-generator.git"
  },
  "keywords": [
    "GitHub",
    "Actions",
    "JavaScript",
    "repo",
    "list",
    "generator"
  ],
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/yi-Xu-0100/repo-list-generator/issues"
  },
  "homepage": "https://github.com/yi-Xu-0100/repo-list-generator#readme",
  "dependencies": {
    "@actions/artifact": "^0.5.0",
    "@actions/core": "^1.1.1",
    "@actions/github": "^4.0.0",
    "@actions/io": "^1.0.2",
    "underscore": "^1.12.0"
  },
  "devDependencies": {
    "@vercel/ncc": "^0.27.0",
    "dotenv": "^8.2.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint": "^7.18.0",
    "husky": "^4.3.8",
    "eslint-plugin-prettier": "^3.3.1",
    "lint-staged": "^10.5.3",
    "prettier": "2.2.1",
    "rimraf": "^3.0.2"
  }
}
